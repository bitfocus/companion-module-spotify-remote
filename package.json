{
	"name": "spotify-remote",
	"version": "2.5.0",
	"main": "dist/main.js",
	"type": "module",
	"scripts": {
		"postinstall": "husky",
		"build": "rimraf dist && tsc -p tsconfig.build.json",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint",
		"lint": "run lint:raw .",
		"lint-fix": "run lint --fix"
	},
	"author": "Peter Stather",
	"license": "MIT",
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"run lint:raw --fix"
		]
	},
	"engines": {
		"node": "^22.12"
	},
	"dependencies": {
		"@companion-module/base": "~1.11.3",
		"@types/node": "^22.14.1",
		"@types/spotify-api": "^0.0.25",
		"got": "^14.4.7",
		"p-queue": "^8.1.0",
		"type-fest": "^4.39.1"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.6.1",
		"eslint": "^9.24.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.1",
		"prettier": "^3.5.3",
		"rimraf": "^6.0.1",
		"typescript": "~5.7.3",
		"typescript-eslint": "^8.29.1"
	},
	"packageManager": "yarn@4.9.1"
}
